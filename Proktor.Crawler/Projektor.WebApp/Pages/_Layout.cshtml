<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="~/lib/semantic-ui/semantic.min.css" rel="stylesheet" />
    <link href="~/css/SemanticExtension.css" rel="stylesheet" />
</head>
<body>
    <div class="ui grid">
        <div class="two wide column">
            <div class="ui vertical fluid tabular menu">                
                <div class="item">
                    <i class="ui icon sync alternate"></i>
                    <div class="content">
                        <a class="header" asp-page="Index">Status</a>
                    </div>
                </div>
                <div class="item">
                    <i class="ui icon calendar outline"></i>
                    <div class="content">
                        <a class="header" asp-page="Projects">Projekte</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="fourteen wide column">
            @RenderBody()
        </div>
    </div>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/semantic-ui/semantic.min.js"></script>
    <script src="~/js/SemanticSettings.js"></script>
</body>
</html>